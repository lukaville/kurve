<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="wrapper">
        <div class="title"> Регистрация </div>
        <input class="input-field" type="username" placeholder="Логин" />
        <input class="input-field" type="email" placeholder="Email" />
        <input class="input-field" type="password" placeholder="Пароль" />

        <div class="btn btn__reg blue" id="register"> Регистрация </div>
        <a href="#" class="btn btn__reg red"> Назад </a>
    </div>

    <fest:if test="json.user.get('isLogin')">
        <fest:include context="json.user" src="components/userinfo.xml"/>
    </fest:if>

</fest:template>
