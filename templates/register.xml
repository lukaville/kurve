<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">


    <div class="wrapper">
        <div class="title"> Регистрация </div>

        <form id="reg-form">

	    <input class="input-field" name="username" type="username" placeholder="Логин" required="" 
	    id="username_input"  />

       
            <input class="input-field" name="email" type="email" placeholder="Email" required="" />
            <input class="input-field" name="password" id="password" type="password" placeholder="Пароль" required="" 
            id="password_input" />
	    <input class="input-field" name="password" id="password_repeat" type="password" placeholder="Повторите пароль" required="" id="password_repeat" />
            <button class="btn btn__reg blue" id="register"> Регистрация </button>
        </form>

        <a href="#" class="btn btn__reg red"> Назад </a>
    </div>
</fest:template>
