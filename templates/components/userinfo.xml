<fest:template xmlns:fest="http://fest.mail.ru" context_name="user">
    <div id="user-block">
        <img src="/img/default.jpg" id="user-block__ava"/>
        <div id="user-block__right-block">
            <div class="user-field" id="user-block__name">
                Имя:
                <span class="field-value">
                    <fest:value output="text">user.get('name')</fest:value>
                </span>
            </div>

            <div class="user-field" id="user-block__email">
                Email:
                <span class="field-value">
                    <fest:value output="text">user.get('email')</fest:value>
                </span>
            </div>

            <div class="user-field" id="user-block__rating">
                Рейтинг:
                <span class="field-value">
                    <fest:value output="text">user.get('rating')</fest:value>
                </span>
            </div>

            <div id="user-block__rating">
                rating
            </div>
        </div>
    </div>
</fest:template>