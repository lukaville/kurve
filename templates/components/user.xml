<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

    <div class="b-user__left">
        <img src="/img/default.jpg" class="b-user__left__ava"/>
    </div>

    <div class="b-user__right">
        <div class="b-user__right__field">
            Имя:
            <span class="b-user__right__field__value">
                <fest:value output="text">json.user.username</fest:value>
            </span>
        </div>

        <div class="b-user__right__field">
            Email:
            <span class="b-user__right__field__value">
                <fest:value output="text">json.user.email</fest:value>
            </span>
        </div>

        <div class="b-user__right__field">
            Рейтинг:
            <span class="b-user__right__field__value">
                <fest:value output="text">json.user.global_rating</fest:value>
            </span>
        </div>
    </div>

</fest:template>