<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

    <div class="cd-popup-container" style="padding: 80px; font-face: 'Open Sans';">

        <h2>Создание комнаты</h2>

        <p>
            <input class="js-room-name" type="text" placeholder="Имя комнаты"/>
        </p>

        <p>
            <label>
                <input class="js-room-private" type="checkbox"/>
                Приватная комната
            </label>
        </p>

        <p>
            <input class="js-room-create" type="button" value="Создать!!"/>
        </p>

        <a class="cd-popup-close img-replace js-close-popup">Close</a>
    </div>

</fest:template>
