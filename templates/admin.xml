<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div id="admin__wrapper">
        <div class="admin__wrapper__title"> Администрирование </div>


        <div class="admin__wrapper__subtitle"> Состояние сервера </div>
        <p> Количество пользователей:<fest:space/>
        <fest:value output="text">
            json.arg.get("userCount")
        </fest:value>
        </p>

        <p>Количество сессий:<fest:space/>
        <fest:value output="text">
            json.arg.get("sessionCount")
        </fest:value>
        </p>

        <div class="admin__wrapper__subtitle"> Список комнат </div>

        <table class="flat-table">
            <tr id="header-table">
                <th> # </th>
                <th> Участники </th>
            </tr>
            <tbody>
            </tbody>
        </table>

        <a class="admin__wrapper__btn btn--red" id="shutdown"> Выключить сервер </a>

        <a href="#" class="admin__wrapper__btn btn--red"> Назад </a>
    </div>
</fest:template>