<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div id="login__wrapper">
        <div class="login__wrapper__title"> Вход </div>

        <form id="login-form">
            <input class="input-field" name="username" type="username" placeholder="Логин" required="" />
            <input class="input-field" name="password" type="password" placeholder="Пароль" required="" />
            <button class="login__wrapper__btn btn--blue" id="login"> Войти </button>
        </form>

        <a href="#" class="login__wrapper__btn btn--red"> Назад </a>
    </div>
</fest:template>
