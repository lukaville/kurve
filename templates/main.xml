<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

    <div id="menu__wrapper">
        <div class="menu__wrapper__title"> Меню </div>

        <fest:if test="json.app.session.get('loggedIn')">
            <a href="#game" class="menu__wrapper__btn btn--blue"> Начать </a>
            <a href="#scoreboard" class="menu__wrapper__btn btn--blue"> Рейтинги </a>
            <div class="menu__wrapper__btn btn--blue" id="logout"> Выйти </div>
        </fest:if>

        <fest:if test="!json.app.session.get('loggedIn')">
            <a href="#login" class="menu__wrapper__btn btn--blue"> Войти </a>
            <a href="#register" class="menu__wrapper__btn btn--blue"> Регистрация </a>
            <a href="#scoreboard" class="menu__wrapper__btn btn--blue"> Рейтинги </a>
        </fest:if>
    </div>

</fest:template>